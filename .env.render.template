# ðŸ¥ƒ Jonathan's Distillation Bot - Render Environment Configuration
# Copy these environment variables to your Render web service

# =================
# NODE ENVIRONMENT
# =================
NODE_ENV=production
PORT=10000

# =================
# TWILIO SMS CONFIG
# =================
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# =================
# CLAUDE AI CONFIG (for distillation expertise)
# =================
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =================
# GOOGLE SHEETS (customer order database)
# =================
# Your Google Sheet ID (from the URL)
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Service account email
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Service account private key (copy the entire key including -----BEGIN PRIVATE KEY-----)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
Your private key content here
-----END PRIVATE KEY-----"

# =================
# DATABASE & REDIS (Auto-configured by Render)
# =================
# These will be automatically set by Render - don't manually configure
DATABASE_URL=
REDIS_URL=

# =================
# OPTIONAL SERVICES
# =================
# OpenAI for vector search (optional)
OPENAI_API_KEY=your_openai_api_key_if_needed

# Shopify integration (optional)
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token

# =================
# APP CONFIGURATION
# =================
# Your Render app URL (will be https://jonathans-distillation-bot.onrender.com)
BASE_URL=https://jonathans-distillation-bot.onrender.com
WEBHOOK_URL=https://jonathans-distillation-bot.onrender.com/webhook/sms

# Security
WEBHOOK_SECRET=your_webhook_secret_here_change_this
SESSION_SECRET=your_session_secret_here
ADMIN_PIN=your_admin_pin_here

# Performance for distillation conversations
MAX_ACTIVE_CONVERSATIONS=1000
MAX_MESSAGES_PER_CUSTOMER=50
ARCHIVE_AFTER_DAYS=30

# =================
# DISTILLATION-SPECIFIC SETTINGS
# =================
# Jonathan's personality and expertise
CLAUDE_PERSONALITY="You are Jonathan from American Copper Works, expert in alcohol distillation and copper stills"
ENABLE_DISTILLATION_EXPERTISE=true

# Logging level
LOG_LEVEL=info