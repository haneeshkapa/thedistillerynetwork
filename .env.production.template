# ðŸš€ Production Environment Configuration for Bluehost
# Copy this to .env.production and fill in your actual values

# =================
# NODE ENVIRONMENT
# =================
NODE_ENV=production

# =================
# SERVER CONFIG
# =================
PORT=3000
HOST=0.0.0.0

# =================
# TWILIO SMS CONFIG
# =================
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# =================
# CLAUDE AI CONFIG
# =================
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =================
# MYSQL DATABASE
# =================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=sms_bot_user
MYSQL_PASSWORD=YourStrongPassword123!
MYSQL_DATABASE=sms_bot_production

# =================
# REDIS CACHE
# =================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================
# ENTERPRISE STORAGE
# =================
MAX_ACTIVE_CONVERSATIONS=5000
MAX_MESSAGES_PER_CUSTOMER=100
ARCHIVE_AFTER_DAYS=90
COMPRESSION_ENABLED=true

# =================
# PERFORMANCE
# =================
MYSQL_CONNECTION_LIMIT=50
REDIS_MEMORY_LIMIT=1gb
STORAGE_BATCH_SIZE=500

# =================
# MONITORING
# =================
ENABLE_MONITORING=true
LOG_LEVEL=info
ENABLE_EXTERNAL_MONITORING=false

# Optional External Monitoring (uncomment and configure if needed)
# ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
# PROMETHEUS_GATEWAY_URL=https://your-prometheus-gateway.com
# DATADOG_API_KEY=your_datadog_api_key_here

# =================
# SECURITY
# =================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
WEBHOOK_SECRET=your_webhook_secret_here_change_this

# =================
# BACKUP CONFIG
# =================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =================
# DOMAIN CONFIG
# =================
# Replace 'yourdomain.com' with your actual domain
BASE_URL=https://yourdomain.com
WEBHOOK_URL=https://yourdomain.com/webhook/sms

# =================
# OPENAI (for vector search)
# =================
# Only needed if using vector search features
# OPENAI_API_KEY=your_openai_api_key_here

# =================
# SHOPIFY INTEGRATION
# =================
# Only needed if using Shopify integration
# SHOPIFY_STORE_URL=your-store.myshopify.com
# SHOPIFY_ACCESS_TOKEN=your_shopify_access_token
# SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret

# =================
# DEVELOPMENT FLAGS
# =================
# Set to false in production
DEBUG_MODE=false
ENABLE_ADMIN_PANEL=true
ENABLE_METRICS_ENDPOINT=true